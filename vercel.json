{
  "builds": [
    {
      "src": "django_project/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": { "distDir": ".vercel/output" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.)",
      "dest": "django_project/wsgi.py"
    }
  ]
}